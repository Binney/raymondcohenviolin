<% if @pictures.any? %>

<div class="container">

	<div class="gallery-preview">
		<ul class="picture-preview">
			<% @pictures.each.do |picture| %>
				<%= render 'pictures/picture_thumb', picture: picture %>
			<% end %>
		</ul>
	</div>

	<p><%= link_to "View gallery >", gallery_path %></p>

</div>

<% end %>