<% provide :title, @album.name %>

<div class="container container-fluid">

<div class="row">

<div class="col-md-6">

<%= image_tag cover_for(@album), width: 300, height: 300, alt: @album.name %>

</div>

<div class="col-md-6">

<% if @album.songs.any? %>
	<ul class="songs">
		<%= render @album.songs %>
	</ul>
<% else %>
	No songs found.
<% end %>

<%= @album.description %>

</div>

</div>

</div>