<% provide :title, "Manage music" %>

<div class="container">

<%= button_to "New album", new_album_path, method: 'get', class: "btn btn-large btn-primary" %>

<% if @albums.any? %>
	
	<ul class="albums">
		<% @albums.each do |album| %>
			<%= render "manage_album", album: album %>
		<% end %>
	</ul>

<% else %>

	No albums found.

<% end %>

</div>